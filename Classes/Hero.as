package  {	import flash.display.MovieClip;	import flash.display.Sprite;	public class Hero extends Sprite{				public var physics:Physics;		public function Hero()		{			//Initialize the hero, draw him.. etc			x = 250;			y = 250;			physics = new Physics();			addChild(physics);						this.graphics.lineStyle(1,0x000000);			this.graphics.beginFill(0x660000,1);				this.graphics.drawCircle(5,0,0);			this.graphics.endFill();		}		public function moveABit(xDistance:Number, yDistance:Number)		{			//Calls the physics class to handle movement			physics.heroMovement(xDistance,yDistance);		}		public function still()		{						physics.heroMovement(0,0);		}			}	}