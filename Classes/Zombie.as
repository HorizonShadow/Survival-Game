package  {	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.ColorTransform;	import flash.display.Graphics;	import fl.motion.Color;			public class Zombie extends Sprite	{		public var physics:Physics;		public var posX;		public var posY;		private var par;		public function Zombie() 		{			this.graphics.lineStyle(1,0x000000);						addEventListener(Event.ADDED_TO_STAGE, onAdd);		}		private function onAdd(e:Event):void		{			par = MovieClip(parent);						randomizeColor();			spawn();			applyPhysics();		}		private function applyPhysics()		{			physics = new Physics();			addChild(physics);		}		private function spawn()		{			if(par.replaying == false)			{				//trace("zombie");				//determinig x and y pos. Must be outside the screen area.				posX = (Math.random() * 1000) - 250;				posY = (Math.random() * 600) - 50;				if(posX > 0 && posX < 500)				{					while(posY > 0 && posY < 500)					{						posY = (Math.random() * 600) - 50;					}				}									//trace("posX: ", posX);				//trace("posY: ", posY);				x = posX;				y = posY;			}		}		private function randomizeColor()		{			this.graphics.beginFill(Math.random() * 0xffffff, 1);				this.graphics.drawCircle(0,0,10);			this.graphics.endFill();		}				public function chase(heroX:Number, heroY:Number)		{			physics.zombieMovement(heroX, heroY);		}	}	}